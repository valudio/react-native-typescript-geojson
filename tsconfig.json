{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "declaration": true,
    "noImplicitAny": true,
    "rootDir": "./src/",
    "outDir": "./dist/"
  },
  "exclude": ["src/**/*.spec.*"]
}
